{
  "hosting": {
    "target": "prod",
    "public": "web/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {{#each apiRoutes}}
      {
        "source" : "{{this}}",
        "run" : {
          "serviceId" : "{{../containerName}}",
          "region": "{{../region}}"
        }
      },
      {{/each}}
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "cleanUrls": true
  }
}